{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest"
    ],
    "skipLibCheck": true,
    "strict": false,
    "outDir": "dist",
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "app",
    "lib",
    "middleware.ts",
    "__tests__",
    "test",
    "prisma",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
